######################################################################
# RADOS performance testing with different object sizes.
#
# NOTE:
# 1. Make sure you have either Ceph pool named 'rados' or change
#    the pool parameter.
# 2. Make sure the open files of user limits is at least 197632 or run
#    $ ulimit -Sn 197632
#    for the session of the fio process.
######################################################################
[global]
include numjobs.fio
numjobs=1024
rw=write

[4k-write-1024jobs]
bs=4k
size=128k
stonewall

[16k-write-1024jobs]
bs=16k
size=512k
stonewall

[64k-write-1024jobs]
bs=64k
size=2m
stonewall

[256k-write-1024jobs]
bs=256k
size=8m
stonewall

[1m-write-1024jobs]
bs=1m
size=32m
stonewall

[4m-write-1024jobs]
bs=4m
size=128m
stonewall
